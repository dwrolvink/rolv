{
    "global": {
        "bindings": [
            {
                "key": "ctrl+shift+r",
                "command": "workbench.action.reloadWindow",
                "when": "",
                "description": "Reload window"
            }
        ]
    },
    "navigation": {
        "description": "Moving around different panels/menus in vscode",
        "bindings": [
            {
                "key": "ctrl+/",
                "command": "workbench.action.terminal.focus",
                "when": "!terminalFocus",
                "description": "Toggle between terminal and editor"
            },
            {
                "key": "ctrl+/",
                "command": "workbench.action.focusActiveEditorGroup",
                "when": "terminalFocus",
                "description": "Toggle between terminal and editor"
            }
        ]
    },
    "search, replace & inspect": {
        "bindings": [
            {
                "key": "alt+d",
                "command": "workbench.files.action.compareWithSaved",
                "description": "Compare current file against its saved version"
            },
            {
                "key": "ctrl+h",
                "command": "editor.action.startFindReplaceAction",
                "when": "editorFocus || editorIsOpen"
            },
            {
                "key": "ctrl+f",
                "command": "actions.find",
                "when": "editorFocus || editorIsOpen"
            },
            {
                "key": "ctrl+f",
                "command": "settings.action.search",
                "when": "inSettingsEditor"
            },
            {
                "key": "ctrl+f",
                "command": "keybindings.editor.searchKeybindings",
                "when": "inKeybindings"
            },
            {
                "key": "ctrl+f",
                "command": "list.find",
                "when": "listFocus && listSupportsFind"
            },
            {
                "key": "ctrl+f",
                "command": "workbench.action.terminal.focusFind",
                "when": "terminalFindFocused && terminalHasBeenCreated || terminalFindFocused && terminalProcessSupported || terminalFocusInAny && terminalHasBeenCreated || terminalFocusInAny && terminalProcessSupported"
            }
        ]
    },
    "terminal": {
        "bindings": [
            {
                "key": "ctrl+e",
                "command": "workbench.action.terminal.runSelectedText",
                "description": "Run selected code in terminal"
            }
        ]
    },
    "in-editor navigation": {
        "description": "Navigating around code in current file",
        "bindings": [
            {
                "key": "ctrl+home",
                "command": "cursorTop",
                "when": "textInputFocus",
                "description": "Go to top of document"
            },
            {
                "key": "ctrl+end",
                "command": "cursorBottom",
                "when": "textInputFocus",
                "description": "Go to bottom of document"
            },
            {
                "key": "ctrl+shift+[",
                "command": "editor.foldAll",
                "when": "editorTextFocus && foldingEnabled"
            },
            {
                "key": "ctrl+shift+]",
                "command": "editor.unfoldAll",
                "when": "editorTextFocus && foldingEnabled"
            }
        ]
    },
    "in-editor manipulation": {
        "description": "Making code changes in current file",
        "bindings": [
            {
                "key": "ctrl+shift+s",
                "command": "editor.action.commentLine",
                "when": "editorTextFocus && !editorReadonly",
                "description": "(un)Comment all selected lines"
            },
            {
                "key": "ctrl+shift+f",
                "command": "editor.action.formatDocument",
                "when": "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly && !inCompositeEditor",
                "description": "Format document"
            },
            {
                "key": "shift+alt+up",
                "command": "editor.action.copyLinesUpAction",
                "when": "editorTextFocus && !editorReadonly",
                "description": "Copy current line up"
            },
            {
                "key": "shift+alt+down",
                "command": "editor.action.copyLinesDownAction",
                "when": "editorTextFocus && !editorReadonly",
                "description": "Copy current line down"
            },
            {
                "key": "ctrl+enter",
                "command": "editor.action.insertLineAfter",
                "when": "editorTextFocus && !editorReadonly",
                "description": "Insert newline after current, and move cursor there"
            },
            {
                "key": "ctrl+shift+enter",
                "command": "editor.action.insertLineBefore",
                "when": "editorTextFocus && !editorReadonly",
                "description": "Insert newline before current, and move cursor there"
            },
            {
                "key": "ctrl+backspace",
                "command": "deleteWordLeft",
                "when": "textInputFocus && !editorReadonly"
            },
            {
                "key": "ctrl+delete",
                "command": "deleteWordRight",
                "when": "textInputFocus && !editorReadonly"
            }
        ]
    },
    "in-editor selection": {
        "description": "Basic actions such as shift+arrow -> select text",
        "bindings": [
            {
                "key": "shift+down",
                "command": "cursorDownSelect",
                "when": "textInputFocus"
            },
            {
                "key": "shift+end",
                "command": "cursorEndSelect",
                "when": "textInputFocus",
                "args": {
                    "sticky": false
                }
            },
            {
                "key": "shift+home",
                "command": "cursorHomeSelect",
                "when": "textInputFocus"
            },
            {
                "key": "shift+left",
                "command": "cursorLeftSelect",
                "when": "textInputFocus"
            },
            {
                "key": "shift+pagedown",
                "command": "cursorPageDownSelect",
                "when": "textInputFocus"
            },
            {
                "key": "shift+pageup",
                "command": "cursorPageUpSelect",
                "when": "textInputFocus"
            },
            {
                "key": "shift+right",
                "command": "cursorRightSelect",
                "when": "textInputFocus"
            },
            {
                "key": "ctrl+home",
                "command": "cursorTop",
                "when": "textInputFocus"
            },
            {
                "key": "ctrl+shift+home",
                "command": "cursorTopSelect",
                "when": "textInputFocus"
            },
            {
                "key": "ctrl+shift+up",
                "command": "cursorUpSelect",
                "when": "textInputFocus"
            },
            {
                "key": "shift+up",
                "command": "cursorUpSelect",
                "when": "textInputFocus"
            }
        ]
    },
    "folding": {
        "bindings": [
            {
                "key": "ctrl+shift+[",
                "command": "editor.foldAll",
                "when": "editorTextFocus && foldingEnabled"
            },
            {
                "key": "ctrl+shift+]",
                "command": "editor.unfoldAll",
                "when": "editorTextFocus && foldingEnabled"
            },
            {
                "key": "ctrl+k ctrl+-",
                "command": "editor.foldAllExcept",
                "when": "editorTextFocus && foldingEnabled"
            },
            {
                "key": "ctrl+k ctrl+1",
                "command": "runCommands",
                "args": {
                    "commands": [
                        "editor.foldAll",
                        "editor.unfoldAll",
                        "editor.foldLevel2"
                    ]
                },
                "when": "editorTextFocus && foldingEnabled"
            },
            {
                "key": "ctrl+k ctrl+2",
                "command": "runCommands",
                "args": {
                    "commands": [
                        "editor.foldAll",
                        "editor.unfoldAll",
                        "editor.foldLevel3"
                    ]
                },
                "when": "editorTextFocus && foldingEnabled"
            },
            {
                "key": "ctrl+k ctrl+3",
                "command": "runCommands",
                "args": {
                    "commands": [
                        "editor.foldAll",
                        "editor.unfoldAll",
                        "editor.foldLevel4"
                    ]
                },
                "when": "editorTextFocus && foldingEnabled"
            }
        ]
    },
    "clipboard": {
        "bindings": [
            {
                "key": "ctrl+insert",
                "command": "editor.action.clipboardCopyAction"
            },
            {
                "key": "ctrl+c",
                "command": "editor.action.clipboardCopyAction"
            },
            {
                "key": "shift+delete",
                "command": "editor.action.clipboardCutAction"
            },
            {
                "key": "ctrl+x",
                "command": "editor.action.clipboardCutAction"
            },
            {
                "key": "shift+insert",
                "command": "editor.action.clipboardPasteAction"
            },
            {
                "key": "ctrl+v",
                "command": "editor.action.clipboardPasteAction"
            }
        ]
    }
}